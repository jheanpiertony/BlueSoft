@model Common.ViewModels.LibroFiltroViewModel

@{
    ViewData["Title"] = "Lista de libros";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear libro</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p class="row">
        <select asp-for="LibroCategoria" asp-items="Model.Categoria" class="form-control col-md-4">
            <option value="">Todos</option>
        </select>
        &nbsp; Titulo: &nbsp;<input type="text" name="SearchString" class="form-control col-md-4" />
        &nbsp;<input type="submit" value="Filtrar" class="btn btn-info" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].NombreLibro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros[0].Autor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Libros) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreLibro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
