@model Common.Models.Libro
@using Common.Models
@{
    ViewData["Title"] = "Eliminar libro";
}

<h1>@ViewData["Title"]</h1>

<h3>Desea eliminar este libro?</h3>
<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreLibro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor.Apellidos)
        </dd>
    </dl>
    <div id="ListaCategoriasLibro">
        @await Html.PartialAsync("_ListaCategoriasDetalles", (List<Categoria>)ViewBag.ListaCategoriasLibro)
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Volver al listado</a>
    </form>
</div>
