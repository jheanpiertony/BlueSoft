@model Common.Models.Libro
@using Common.Models

@{
    ViewData["Title"] = "Detalles del libro";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreLibro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor.Apellidos)
        </dd>
    </dl>
</div>
<div id="ListaCategoriasLibro">
    @await Html.PartialAsync("_ListaCategoriasDetalles", (List<Categoria>)ViewBag.ListaCategoriasLibro)
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-info">Volver al listado</a>
</div>
